{% extends 'customer_base.jinja' %} {% block content %}
{% if out_of_stock == True %}
<p>Sorry, your order is not in stock.</p>
{% endif %}
<h1>Make new order:</h1>
    <form name='make_new_order' action='make_new_order' method='post'>
        <h2>Frame style and size:</h2>    
            {% for style, frame in frames | groupby('style') %}
                <label for='frame_style'>{{ style }}:</label>
                <input type='radio' name='frame_style' id='frame_style' value='{{ style }}' required="yes"/>
            {% endfor %}<br>

            <label for='frame_size'>S</label>
            <input type="radio" name="frame_size" id="frame_size" value="S" required="yes"/>
            <label for='frame_size'>M</label>
            <input type="radio" name="frame_size" id="frame_size" value="M"/>
            <label for='frame_size'>L</label>
            <input type="radio" name="frame_size" id="frame_size" value="L"/>
        <h2>Fabric pattern:</h2>
            {% for fabric in fabrics %}
                <label for='fabric_pattern'>{{ fabric.pattern }}:</label>
                <input type='radio' name='fabric_pattern' id='fabric_pattern' value='{{ fabric.id }}' required="yes"/>
            {% endfor %}
        <input type='submit' value='Place order'/>
    </form>
{% endblock %}