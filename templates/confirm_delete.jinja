{% extends "admin_base.jinja" %} {% block content %}
<h2>Caution!</h2>
{% if orders|length == 1 %}
<p>The {{ object_type }} you are about to delete is in the following order:</p>
{% else %}
<p>The {{ object_type }} you are about to delete is in the following orders:</p>
{% endif %}
<div class="grid-container">
    {% for order in orders %}
        <ul class="grid-item">
            <li>Order ID: {{ order.id }}</li>
            <li>Frame: {{ order.frame.style }}</li>
            <li>Frame size: {{ order.frame.size }}</li>
            <li>Fabric: {{ order.fabric.pattern }}</li>
        </ul>
    {% endfor %}
</div>
{% if orders|length == 1 %}
<p>Are you sure you also want to remove this order?</p>
{% else %}
<p>Are you sure you also want to remove these orders?</p>
{% endif %}
<form name="confirm_delete" action="/{{ object_type }}_delete_order/{{ object.id }}" method="post">
    <button type="submit">Confirm</button>
</form>
{% endblock %}